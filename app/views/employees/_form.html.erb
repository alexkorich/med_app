<%= form_for(@employee) do |f| %>
  <% if @employee.errors.full_messages.any? %>
  <% @employee.errors.full_messages.each do |error_message| %>
    <div class="alert alert-danger" role="alert">
    <%= error_message  %> <br />
    </div>
  <% end %>
<% end %>

  <div class="field">
    <%= f.label :surname %><br>
    <%= f.text_field :surname , class: 'form-control'%>
  </div>
  <div class="field">
    <%= f.label :birth_year %><br>
    <%= f.number_field :birth_year, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :position %><br>
    <%= f.select :position, ['doctor','assistant','nurse'], {}, {class:"form-control"}%>
  </div>
  <div class="actions">
    <%= f.submit "Save", class: "btn btn-default" %>
  </div>
<% end %>
